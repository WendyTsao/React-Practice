html, body
  overflow-x hidden
  background-color #282c34

body
  height 100vh
  background url('https://www.transparenttextures.com/patterns/stardust.png') repeat
  animation moveStars 100s linear infinite

ol
  list-style-type none
  padding-inline-start 0
  margin-block-end 0
  padding 20px 0 0

ol li
  font-size 1.2rem
  line-height 1.8

h1
  font-size 2.5rem
  margin 2rem auto

h2, h3
  margin 0 auto

svg
  cursor pointer

.layout
  text-align center
  min-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  font-size calc(10px + 2vmin)
  color white
  padding 1rem 2rem
  box-sizing border-box
  
.logo
  height 20vmin
  margin-bottom 1.2rem
  &:hover
    animation-play-state paused

.title
  text-align center
  color #BBE1FA
  text-shadow 0 4px 4px #0F4C75
  letter-spacing 5px
  transform skew(-10deg)

.card
  display flex
  flex-direction column
  justify-content space-between
  margin 10px
  cursor pointer
  
  &:hover
    .cardActions
      .button
        animation slide 1s ease-in-out 2

.cardContent
  text-align center
  background-color #3f4a61
  overflow-wrap break-word
  color #fff
  min-height 5rem
  line-height 5rem
  .subTitle
    max-width 16rem
    font-size 1rem
    line-height 1.3
    letter-spacing 1px
    margin 1rem auto

.cardActions
  justify-content center
  background-color #fff

@media (prefers-reduced-motion no-preference)
  .logo
    animation App-logo-spin infinite 20s linear

@keyframes App-logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

@keyframes moveStars
  from
    background-position 0 0
  to
    background-position 100% 100%

@keyframes slide
  0%
    transform translateX(0)
  50%
    transform translateX(50px)
  100%
    transform translateX(0)
