.resume
  position relative
  margin 0
  ol
    border-top 1px dashed #fff

  section
    padding 1rem 2rem

  .header
    .typing-text
      text-align center
      font-size 2rem
      overflow hidden
      transform skew(-15deg)
    .replay
      color #BBE1FA
      margin-left .5rem
      cursor pointer
    .swipe
      animation swipe 1.5s ease-in-out infinite
  .title
    color #BBE1FA
    text-shadow 0 4px 4px #0F4C75
    letter-spacing 5px
    transform skew(-10deg)

  .dialog
    max-width 50rem
    margin 2rem auto
    padding 2rem 6rem
    background-color #fff
    border-radius 50rem 30rem 0 50rem
    box-shadow inset 4px 4px 8px #3282B8
    &.reverse
      border-radius 50rem 0 30rem 50rem
      box-shadow inset 4px -4px 8px #C75B7A
      .solgan
        color #C75B7A
        text-shadow 0 4px 4px #F7B5CA
    &:hover
      transform translateX(-5px) translateY(-5px)
      transition transform .8s ease


  .solgan
    font-size 1.2rem
    font-weight 600
    color #0F4C75
    text-shadow 0 4px 4px #BBE1FA
    transform skew(-10deg)

  // Skill方塊滑入方向樣式
  .card
    position relative
    &::before
      content ''
      width 100%
      height 100%
      box-sizing border-box
      position absolute
      top 0
      left 0
      border 5px solid #BBE1FA
      transform scaleX(0)
      transition transform 0.8s ease

  .left
    &:hover::before
      transform scaleX(1)
      transform-origin top left

    &:not(:hover)::before
      transform-origin top right

  .right
    &:hover::before
      transform scaleX(1)
      transform-origin top right

    &:not(:hover)::before
      transform-origin top left

  .top, .bottom
    &:hover::before
      transform scaleX(1)
      transform-origin top center

    &:not(:hover)::before
      transform scaleX(0)
      transform-origin top center

  .timeline
    max-width 70%
    color #fff
    margin 0 auto
    padding .25rem
    .item
      .dot, .line, .time
        transition .5s ease
      .time
        font-weight 600
        flex .35
        padding .5rem
      &:hover
        .dot, .line
          background-color #C75B7A
        .time
          color #C75B7A

  .footer
    font-size 0.5rem
    text-align center
    color #BBE1FA
    border-top 1px solid #BBE1FA
    margin-top 5rem
    padding 1rem 3rem
    svg
      cursor pointer


  @keyframes swipe
    0%
      transform translateY(0) rotate(0deg)
    50%
      transform translateY(20px) rotate(-45deg)
    100%
      transform translateY(0) rotate(0deg)

@media screen and (max-width: 768px)
  .resume 
    .dialog
      margin 2rem
      padding 2rem
      border-radius 5rem
      &.reverse
        border-radius 5rem
    .solgan
      text-align center
    
    .timeline
      max-width 100%
      .time
        flex .2
      .content
        padding .5rem

