.resume
  ul
    border-top 1px dashed #fff

  section
    padding 1rem

  .header
    .typing-text
      text-align center
      font-size 2rem
      overflow hidden
      transform skew(-15deg)
    .swipe
      animation swipe 1.5s ease-in-out infinite

  .title
    color #BBE1FA
    text-shadow 0 4px 4px #0F4C75
    letter-spacing 5px
    transform skew(-10deg)

  .dialog
    margin 2rem 10rem
    padding 2rem 6rem
    background-color #fff
    border-radius 50rem 30rem 0 50rem
    box-shadow inset 4px 4px 8px #3282B8
    &.reverse
      border-radius 50rem 0 30rem 50rem
      box-shadow inset 4px -4px 8px #C75B7A
      .solgan
        color #C75B7A
        text-shadow 0 4px 4px #F7B5CA
    &:hover
      transform translateX(-5px) translateY(-5px)
      transition transform .8s ease


  .solgan
    font-size 1.2rem
    font-weight 600
    color #0F4C75
    text-shadow 0 4px 4px #BBE1FA
    transform skew(-10deg)

  // Skill方塊滑入方向樣式
  .card
    position relative
    &::before
      content ''
      width 100%
      height 100%
      box-sizing border-box
      position absolute
      top 0
      left 0
      border 5px solid #BBE1FA
      transform scaleX(0)
      transition transform 0.8s ease

  .left
    &:hover::before
      transform scaleX(1)
      transform-origin top left

    &:not(:hover)::before
      transform-origin top right

  .right
    &:hover::before
      transform scaleX(1)
      transform-origin top right

    &:not(:hover)::before
      transform-origin top left

  .top, .bottom
    &:hover::before
      transform scaleX(1)
      transform-origin top center

    &:not(:hover)::before
      transform scaleX(0)
      transform-origin top center

  @keyframes swipe
    0%
      transform translateY(0) rotate(0deg)
    50%
      transform translateY(20px) rotate(-45deg)
    100%
      transform translateY(0) rotate(0deg)
